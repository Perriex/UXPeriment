{
  "manifest_version": 3,
  "name": "BIPA",
  "description": "Browser intelligent personal assistant",
  "version": "1.0",
  "web_accessible_resources": [
    {
      "resources": ["*/**"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["http://*/*", "https://*/*"],
      "js": ["startup.js", "js/automatic/add-lazy-loading-to-media.js"]
    },
    {
      "run_at": "document_end",
      "matches": ["http://*/*", "https://*/*"],
      "js": [
        "js/manual/view-recent-click.js",
        "js/manual/regex-search.js",
        "js/dom/record-megamenu.js",
        "js/dom/frequency-based-sort.js",
        "js/dom/add-attributes-to-all.js",
        "js/dom/auto-apply-flow.js"
      ]
    },
    {
      "run_at": "document_idle",
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/manual/shadow-user.js"]
    }
  ],
  "background": {
    "service_worker": "js/script/background.js"
  },
  "action": {
    "default_popup": "html/index.html",
    "default_title": "Features"
  },
  "permissions": [
    "activeTab",
    "nativeMessaging",
    "webRequest",
    "declarativeNetRequest",
    "scripting"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png",
    "512": "icons/icon512.png"
  }
}
